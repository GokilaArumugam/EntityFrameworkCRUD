@model EntityFramework_DemoProject.Models.ClubsModel
@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Content/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Content/regular.min.css" rel="stylesheet" />
    <link href="~/Content/solid.min.css" rel="stylesheet" />
    <style type="text/css">
        .registration-container {
            padding: 50px;
            border-radius: 5px;
            box-shadow: 0 0 5px;
            background-color: #C1D7AE;
        }

        sup {
            color: #f00;
            font-weight: bolder;
        }

        label {
            font-weight: bold;
        }

        small {
            color: #f00;
            font-weight: bolder;
        }
    </style>
</head>
<div class="registration-container w-50 container">
    <h2 class="text-center mb-3">
        Register Here!!
    </h2>
    <div class="row">
        @using (Html.BeginForm("EventDetails", "Event", FormMethod.Post, new { @class = "registration-form" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.MemberName, new { @class = "form-label" })
                        <sup>*</sup>
                        <div class="input-group">
                            @Html.EditorFor(m => m.MemberName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <small>
                            @Html.ValidationMessageFor(m => m.MemberName, "", new { @class = "text-danger" })
                        </small>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Venue, new { @class = "form-label" })
                        <sup>*</sup>
                        <div class="input-group">
                            @Html.EditorFor(m => m.Venue, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <small>
                            @Html.ValidationMessageFor(m => m.Venue, "", new { @class = "text-danger" })
                        </small>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Event_Date, new { @class = "form-label" })
                            <sup>*</sup>
                            <div class="input-group">
                                @Html.EditorFor(m => m.Event_Date, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <small>
                                @Html.ValidationMessageFor(m => m.Event_Date, "", new { @class = "text-danger" })
                            </small>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.NSS, new { @class = "form-label" })
                        <sup>*</sup>
                        <div>
                            @Html.RadioButtonFor(m => m.NSS, "Attended", new { @class = "form-check-input me-1" })
                            @Html.Label("Attended", new { @class = "form-check-label me-1" })

                            @Html.RadioButtonFor(m => m.NSS, "Not Attended", new { @class = "form-check-input me-1" })
                            @Html.Label("Not Attended", new { @class = "form-check-label me-1" })
                        </div>
                        <small>
                            @Html.ValidationMessageFor(m => m.NSS, "", new { @class = "text-danger" })
                        </small>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.TTC, new { @class = "form-label" })
                        <sup>*</sup>
                        <div>
                            @Html.RadioButtonFor(m => m.TTC, "Attended", new { @class = "form-check-input me-1" })
                            @Html.Label("Attended", new { @class = "form-check-label me-1" })

                            @Html.RadioButtonFor(m => m.TTC, "Not Attended", new { @class = "form-check-input me-1" })
                            @Html.Label("Not Attended", new { @class = "form-check-label me-1" })
                        </div>
                        <small>
                            @Html.ValidationMessageFor(m => m.TTC, "", new { @class = "text-danger" })
                        </small>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.YRC, new { @class = "form-label" })
                        <sup>*</sup>
                        <div>
                            @Html.RadioButtonFor(m => m.YRC, "Attended", new { @class = "form-check-input me-1" })
                            @Html.Label("Attended", new { @class = "form-check-label me-1" })

                            @Html.RadioButtonFor(m => m.YRC, "Not Attended", new { @class = "form-check-input me-1" })
                            @Html.Label("Not Attended", new { @class = "form-check-label me-1" })
                        </div>
                        <small>
                            @Html.ValidationMessageFor(m => m.YRC, "", new { @class = "text-danger" })
                        </small>
                    </div>
                </div>
            </div><div class="mt-3  text-center">
                @if (Model.Id == 0)
                {<button type="submit" class="btn-success btn" id="addbtn">Register</button>}
                else
                {<button type="submit" class="btn-primary btn" id="addbtn">Update</button>}

                <button type="button" class="btn-danger btn" onclick="pageRefresh()">Cancel</button>
            </div>
        }
    </div>
</div>